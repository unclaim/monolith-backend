APP_ENV=development
APP_PORT=8080
APP_SECRET_KEY=your_super_secret_key_for_sessions_and_csrf # Обязательно измени на длинную случайную строку!
APP_CSRF_SECRET=your_csrf_secret_key # Обязательно измени на другую длинную случайную строку!

# PostgreSQL Configuration
POSTGRES_HOST=db_postgres
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=youdo_clone_db
POSTGRES_SSLMODE=disable
POSTGRES_MAX_CONN=10
POSTGRES_MAX_IDLE_CONN=5
POSTGRES_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=db_redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# MongoDB Configuration (для чата, пока не используется, но пригодится)
MONGO_URI=mongodb://db_mongo:27017
MONGO_DB_NAME=youdo_clone_chat

# Email Configuration (для подтверждения email и сброса пароля)
EMAIL_SENDER_NAME="YouDo Clone Support"
EMAIL_SENDER_ADDRESS=support@youdo-clone.com
EMAIL_SMTP_HOST=smtp.mailgun.org # Пример
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_mailgun_username
EMAIL_SMTP_PASSWORD=your_mailgun_password